<% include ../menu.html %>
<div class="container-fluid" style="margin-left: 15%;margin-top: -40%">
            <div class="page-header"><h3>Bodaboda Agents Trips</h3></div>
                <div class="col-md-6">
                        <% var keys=Object.keys(allbodatrips)  %>
                      <table class="table table-hover" border="2">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Total Trips</th>
                                <th scope="col"><p><%= size %></p></th>
                              </tr>
                          <tr>
                            <th scope="col">PickUp</th>
                            <th scope="col">Total Cost</th>
                            <th scope="col">Destination</th>
                            <th scope="col" >Distance</th>
                            <th scope="col" >Time</th>
                          </tr>
                        </thead>
                        <tbody>
                         <% keys.forEach(function(agent){ %>

                           <tr id=""  onmouseover="{ getBodaRideCustomerandRider('<%= allbodatrips[agent].customer %>','<%= allbodatrips[agent].rider %>') }">
                            <td><%= allbodatrips[agent].PickUp %></td>
                            <td><%= allbodatrips[agent].TotalCost %></td>
                            <td><%= allbodatrips[agent].destination%></td>
                            <td><%= allbodatrips[agent].distance %></td>
                            <% var date = new Date(allbodatrips[agent].timestamp*1000) %>
                            <td><%= date %></td>
                           </tr>
                           <% })%>
                        </tbody>
                      </table>
                 </div>
                 <div class="col-md-4">
                     <h3>Driver & Customer Details</h3>
                     <h5 id='riderName'></h5>
                     <h5 id='riderPhone'></h5>
                     <h5 id='riderHelment'></h5>
                     <img id="riderImage" height="100" width="100"/>
                     <h5 id='customerPhone'></h5>
                 </div>
        </div>
</div>
<script type="text/javascript">
    //* Loop through all dropdown buttons to toggle between hiding and showing its dropdown content - This allows the user to have multiple dropdowns without any conflict */
    var dropdown = document.getElementsByClassName("dropdown-btn");
    var i;

    for (i = 0; i < dropdown.length; i++) {
        dropdown[i].addEventListener("click", function() {
            this.classList.toggle("active");
            var dropdownContent = this.nextElementSibling;
            if (dropdownContent.style.display === "block") {
                dropdownContent.style.display = "none";
            } else {
                dropdownContent.style.display = "block";
            }
        });
    }
</script>
        <script src="/js/firebase.js"></script>
        <script src="/js/database.js"></script>


    </body>
</html>