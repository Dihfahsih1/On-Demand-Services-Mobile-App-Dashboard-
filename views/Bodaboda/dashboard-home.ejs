<% include ../menu.html %>
<div style="overflow-y:-moz-scrollbars-vertical;margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
    <div class="page-header"><h1>Welcome to BodaBoda Management Panel</h1></div>

            <% var keys=Object.keys(bodabodas)%>
            <table class="table table-hover" border="2">
                <thead class="thead-dark">
                <tr>
                    <th>Total Riders</th>
                    <th><p><%= size %></p></th>
                </tr>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Status</th>
                    <th>Balance</th>
                    <th>Helment No.</th>
                    <th>Photo</th>
                    <th>ID</th> <th>Rating</th>
                    <th>Approve</th>
                    <th>Deactivate</th>
                    <th>Reject</th>
                    <th>Trips</th>
                    <th>Pay Agent</th>
                </tr>
                </thead>
                <tbody>
                <% keys.forEach(function(agent){ %>
                    <tr onmouseover="{ GetBodaRating('<%= agent %>') }">
                        <td ><%= bodabodas[agent].userName %></td>
                        <td style="text-align: left"><%= bodabodas[agent].phone %></td>
                        <td ><%= bodabodas[agent].accountStatus %></td>
                        <td ><%= bodabodas[agent].walletBalance %> UGX</td>
                        <td ><%= bodabodas[agent].helMentNo %></td>
                        <td ><a target="_blank" href="<%= bodabodas[agent].profilePic %>"><img height="30" width="30" src="<%= bodabodas[agent].profilePic %>"/></a></td>
                        <td style=""><a target="_blank" href="<%= bodabodas[agent].NationalIDPic %>"><img height="30" width="30" src="<%= bodabodas[agent].NationalIDPic %>"/></a></td>
                        <td><h4 id=rating></h4></td>
                        <td><button style='margin-top:5px' class="btn btn-primary"onclick="{ approveRest('<%= agent %>') }" id='approveButton'>Approve</button></td>
                        <td> <button style='margin-top:5px' class="btn btn-primary"onclick="{ deactivateRest('<%= agent %>') }" id='deactivateButton'>Deactivate</button></td>
                        <td><button style='margin-top:5px' class="btn btn-primary"  onclick="{ rejectRest('<%= agent %>') }" id='rejectButton'>reject</button></td>
                        <td style=""><a href="/viewSingleRiderTrips/<%= agent %>/"><button class="btn btn-success"  id='singleTripsButton'>History</button>  </a></td>
                        <td style=""><button  onclick="{showPayoutOptions()}" class="btn btn-success">Pay </button>
                            <div style="display:none" id='payoutMethod' class="form-group">
                                <input style='margin-top:5px' class="form-control"  id='payoutamount' name="pay_amount" >
                                <button  style='margin-top:5px' class="btn btn-primary" onclick="{ payBodaAgent('<%= agent %>') }" >Pay</button>
                            </div>
                        </td>
                    </tr>
                <% })%>
                </tbody>
            </table>
        </div>
    </div>




