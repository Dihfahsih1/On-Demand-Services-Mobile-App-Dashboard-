<% include ../menu.html %>
            <div class="page-header"><h1> Incoming Requests for Delivery Agents</h1></div>
    <div class="col-md-5">
        <% var keys=Object.keys(deliveryrequests)  %>
        <table class="table" border="2">
            <thead class="thead-dark">
            <tr >
                <th scope="col">Total Requests: <%= size %></th>
            </tr>
            <tr>
                <th scope="col">Client Contact</th>
                <th scope="col">View Request Location</th>
            </tr>
            </thead>
            <tbody>
            <% keys.forEach(function(agent){ %>
                <tr onmouseover="{ viewDeliveryClientLocation('<%= agent %>') }">
                    <td><%= deliveryrequests[agent].customerPhone %></td>
                    <td><button class="btn btn-primary"onclick="{ viewDeliveryClientLocation('<%= agent %>') }">View Request Location</button></td>
                </tr>
            <% })%>
            </tbody>
        </table>
    </div>
<div class="col-md-4">
        <h3>Request Location</h3>
        <div id="map">
        </div>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDNtTpw_MrAdwrPlXGTlVVS5BjH5xZeh50&callback=initMap"
                async defer></script>
    </div>
<script src="/js/firebase.js"></script>
<script src="/js/database.js"></script>
