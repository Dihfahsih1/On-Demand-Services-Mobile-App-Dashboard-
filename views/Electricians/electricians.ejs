<% include ../menu.html %>
<div style="overflow-y:-moz-scrollbars-vertical;margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
    <div class="page-header"><h3> Welcome to Electrician Panel</h3></div>
        <% var keys=Object.keys(electricians)  %>
        <table class="table table-hover" border="2">
            <thead class="thead-dark">
            <tr>
                <th>Total: <%= size %></th>
            </tr>
            <tr>
                <th>UserName</th>
                <th>Phone</th>
                <th>Account Status</th>
                <th>Wallet Balance</th>
                <th>Profile Pic</th>
                <th>Nationl ID</th>
                <th>Working Certificate</th>
                <th>Rating</th>
                <th>Approve</th>
                <th>Deactivate</th>
                <th>Reject</th>
                <th>Trips</th>
            </tr>
            </thead>
            <tbody>
            <% keys.forEach(function(agent){ %>
                <tr onmouseover="{ GetElectricianRating('<%= agent %>') }">
                    <td><%= electricians[agent].userName %></td>
                    <td><%= electricians[agent].phone %></td>
                    <td><%= electricians[agent].accountStatus %></td>
                    <td><%= electricians[agent].walletBalance %> UGX</td>
                    <td><a target="_blank" href="<%= electricians[agent].profilePic %>"><img height="30" width="30" src="<%= electricians[agent].profilePic %>"/></a></td>
                    <td><a target="_blank" href="<%= electricians[agent].NationalIDPic %>"><img height="30" width="30" src="<%= electricians[agent].NationalIDPic %>"/></a></td>
                    <td><a target="_blank" href="<%= electricians[agent].WorkingCertificate %>"><img height="30" width="30" src="<%= electricians[agent].WorkingCertificate %>"/></a></td>
                    <td><h4 id=rating></h4></td>
                    <td><button style='margin-top:5px' class="btn btn-primary"onclick="{ approveRest('<%= agent %>') }" id='approveButton'>Approve</button></td>
                    <td> <button style='margin-top:5px' class="btn btn-primary"onclick="{ deactivateRest('<%= agent %>') }" id='deactivateButton'>Deactivate</button></td>
                    <td><button style='margin-top:5px' class="btn btn-primary"  onclick="{ rejectRest('<%= agent %>') }" id='rejectButton'>reject</button></td>
                    <td><a href="/viewSingleElectricianServiceHistory/<%= agent %>/"><button class="btn btn-primary"  id='singleTripsButton'> History</button>  </a></td>
                </tr>
            <% })%>
            </tbody>
        </table>
    </div>
</div>
