<% include ../menu.html %>
<div class="container-fluid" style="margin-left: 15%;margin-top: -40%">
    <div class="page-header"><h1> Fumigation Services Panel</h1></div>
      <div class="col-lg-12" style=" overflow: scroll">
        <% var keys=Object.keys(fumigationagents)  %>
        <table class="table table-hover" border="2">
            <thead class="thead-dark">
            <tr>
                <th><p>Total: <%= size %></p></th>
            </tr>
            <tr>
                <th>UserName</th>
                <th>Phone</th>
                <th>Account Status</th>
                <th>Wallet Balance</th>
                <th>Profile Pic</th>
                <th>Nationl ID</th>
                <th>Working Certificate</th>
                <th>Rating</th>
                <th>Approve</th>
                <th>Deactivate</th>
                <th>Reject</th>
                <th>Trips</th>
            </tr>
            </thead>
            <tbody>
            <% keys.forEach(function(agent){ %>
                <tr onmouseover="{ GetAgentRating('<%= agent %>','FumigationAgents') }">
                    <td><%= fumigationagents[agent].userName %></td>
                    <td><%= fumigationagents[agent].phone %></td>
                    <td><%= fumigationagents[agent].accountStatus %></td>
                    <td><%= fumigationagents[agent].walletBalance %> UGX</td>
                    <td><a target="_blank" href="<%= fumigationagents[agent].profilePic %>"><img height="30" width="30" src="<%= fumigationagents[agent].profilePic %>"/></a></td>
                    <td><a target="_blank" href="<%= fumigationagents[agent].NationalIDPic %>"><img height="30" width="30" src="<%= fumigationagents[agent].NationalIDPic %>"/></a></td>
                    <td><a target="_blank" href="<%= fumigationagents[agent].WorkingCertificate %>"><img height="30" width="30" src="<%= fumigationagents[agent].WorkingCertificate %>"/></a></td>
                    <td><h4 id=rating></h4></td>
                    <td><button style='margin-top:5px' class="btn btn-primary"onclick="{ approveRest('<%= agent %>','FumigationAgents') }" id='approveButton'>Approve</button></td>
                    <td> <button style='margin-top:5px' class="btn btn-primary"onclick="{ deactivateRest('<%= agent %>','FumigationAgents') }" id='deactivateButton'>Deactivate</button></td>
                    <td><button style='margin-top:5px' class="btn btn-primary"  onclick="{ rejectRest('<%= agent %>','FumigationAgents') }" id='rejectButton'>reject</button></td>
                    <td><a href="/viewSingleAgentServiceHistory/<%= agent %>/<%= 'fumigation'%>/"><button class="btn btn-primary"  id='singleTripsButton'>History</button>  </a></td>

                </tr>
            <% })%>
            </tbody>
        </table>
    </div>
</div>
