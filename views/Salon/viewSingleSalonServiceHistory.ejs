<!DOCTYPE html>
<html>
<head>
    <title>
        Router App Dashboard
    </title>
    <script src="https://www.gstatic.com/firebasejs/6.1.0/firebase-app.js"></script>
    <!-- Add Firebase products that you want to use -->
    <script  src="https://www.gstatic.com/firebasejs/6.1.0/firebase-auth.js"></script>
    <script  src="https://www.gstatic.com/firebasejs/6.1.0/firebase-firestore.js"></script>
    <script src="https://www.gstatic.com/firebasejs/6.1.0/firebase-database.js"></script>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/mycss.css">
</head>
<body>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Router Dashboard</a>
        </div>
        <ul class="nav navbar-nav">
            <li ><a href="/">Home</a>></li>
            <li> <a href="/customers" class="nav-link">Customers</a></li>
            <li><a href="/dashboard-home" class="nav-link">Boda Boda</a></li>
            <li><a href="/taxi" class="nav-link">Taxi</a></li>
            <li> <a href="/delivery" class="nav-link">Delivery</a></li>
            <li> <a href="/carrental" class="nav-link">Car Rental</a></li>
            <li> <a href="/cleaning" class="nav-link">Cleaning</a></li>
            <li> <a href="/doctors" class="nav-link">Doctors</a></li>
            <li><a href="/electricians" class="nav-link">Electricians</a></li>
            <li ><a href="/fumigation" class="nav-link">Fumigation</a></li>
            <li ><a href="/gasrefill" class="nav-link">Gas Refill</a></li>
            <li ><a href="/massage" class="nav-link">Massage</a></li>
            <li><a href="/plumbing" class="nav-link">Plumbing</a></li>
            <li  class="active"><a href="/salon" class="nav-link">Salon</a></li>
            <li ><a href="/mechanics" class="nav-link">Mechanics</a></li>
        </ul>
    </div>
</nav>
<div class="container">
    <div class="row">
        <div class="container">
            <div class="page-header"><h1> Salon Agents Panel</h1></div>
            <nav class="navbar navbar-header">
                <div class="container-fluid">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="/salon/<%= 'salon'%>/"><button  class="btn btn-default">Manage Agent</button></a> </li>
                        <li><a href="/Agentsonline/<%= 'salon'%>/"><button  class="btn btn-success">Agents Online</button></a> </li>
                        <li><a href="/Agentsworking/<%= 'salon'%>/"><button  class="btn btn-success">Agents Working</button></a></li>
                        <li><a href="/incomingRequests/<%= 'salon'%>/"><button  class="btn btn-success">Incoming Requests</button></a></li>
                        <li ><a href="/allAgentsServiceHistory/<%= 'salon'%>/"><button class="btn btn-success">Agents History</button></a></li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>

    <div class="col-md-6">
        <% var keys=Object.keys(historyobjects)  %>

        <table class="table table-hover" border="2">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Total: <%= size %></th>
            </tr>
            <tr>
                <th scope="col">Service Charge</th>
                <th scope="col">Service point</th>
                <th scope="col" >Time</th>
            </tr>
            </thead>
            <tbody>
            <% keys.forEach(function(agent){ %>
                <tr onmouseover="{ getSalonCustomerandAgent('<%= historyobjects[agent].customer %>','<%= historyobjects[agent].SalonAgent %>') }">
                    <td><%= historyobjects[agent].serviceFee %></td>
                    <td><%= historyobjects[agent].servicepoint %></td>
                    <% var date = new Date(historyobjects[agent].timestamp*1000) %>
                    <td><%= date %></td>

                </tr>
            <% })%>

            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <h3>Agent & Customer Details</h3>
        <h5 id='riderName'></h5>
        <h5 id='riderPhone'></h5>
        <img id="riderImage" height="100" width="100"/>
        <h5 id='customerPhone'></h5>
    </div>

</div>

<script src="/js/firebase.js"></script>
<script src="/js/database.js"></script>
</body>
</html>