<% include ../menu.html %> <div class="container-fluid" style="margin-left: 15%;margin-top: -40%">
<div class="page-header"><h3>Drivers Working</h3></div>
                            
        <div class="col-md-6">
            <% var keys=Object.keys(workingdrivers)  %>
            <table class="table" border="2">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Total Working: <%= size %></th>
                          </tr>
                      <tr>
                        <th scope="col">UserName</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Plate No.</th>
                        <th scope="col">CarType</th>
                        <th scope="col" >View Trip</th>
                        <th scope="col">View Location</th>
                      </tr>
                    </thead>
                    <tbody>
                   <% keys.forEach(function(agent){ %>
                        <tr onmouseover="{ viewDriverTripLocation('<%= agent %>') }">
                        <td><%= workingdrivers[agent].driverName %></td>
                        <td><%= workingdrivers[agent].driverPhone %></td>
                        <td><%= workingdrivers[agent].driverCarPlate %></td>
                        <td><%= workingdrivers[agent].driverCarType %></td>
                        <td><button class="btn btn-primary"onclick="{ viewDriverTrip('<%= agent %>') }"> View Trip</button></td>
                        <td><button class="btn btn-primary"onclick="{ viewDriverTripLocation('<%= agent %>') }"> View Location</button></td>
                      </tr>
                      <% })%>
                    </tbody>
                  </table>
         </div>
         <div class="col-md-4" >
             <h3>Trip Details</h3>
             <h5 id="destination"></h5>
             <h5 id="pickup"></h5>
             <h5 id="paymentMode"></h5>
             <h5 id="customer"></h5>

             <h3>Driver Trip Location</h3>
             <div id="map">
             </div>
             <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDNtTpw_MrAdwrPlXGTlVVS5BjH5xZeh50&callback=initMap"
             async defer></script>
         </div>
    </div>