<% include ../menu.html %>
<div class="container-fluid" style="margin-left: 15%;margin-top: -40%">
            <div class="page-header">
            <h1>Welcome to Drivers Management Panel</h1>
            </div>
             <div style=" overflow: scroll">
                    <% var keys=Object.keys(drivers)%>
                    <table class="table table-hover" border="2">
                            <thead class="thead-dark">
                              <tr>
                                <th ><p>Total: <%= size %></p></th>
                              </tr>
                              <tr style="text-align: left">
                                  <th>Phone</th>
                                <th>Name</th>
                                <th>Account Status</th>
                                <th>Wallet Balance</th>
                                <th>Car Type</th>
                                <th>Number Plate</th>
                                <th>Profile Pic</th>
                                <th>Nationl ID</th>
                                <th>Driving Permit</th>
                                <th>Third party</th>
                                  <th>Rating</th>
                                <th>Approve</th>
                                <th>Deactivate</th>
                                <th>Reject</th>
                                <th>Trips</th>
                                <th>Pay Driver</th>
                              </tr>
                            </thead>
                            <tbody>
                            <% keys.forEach(function(agent){ %>
                             <tr onmouseover="{ GetDriverRating('<%= agent %>') }">
                                 <td style="font-size:12px"><%= drivers[agent].phone %></td>
                                <td><%= drivers[agent].userName %></td>
                                <td><%= drivers[agent].accountStatus %></td>
                                <td><%= drivers[agent].walletBalance %> UGX</td>
                                <td><%= drivers[agent].carType %></td>
                                <td><%= drivers[agent].numberPlate %></td>
                                <td><a target="_blank" href="<%= drivers[agent].profilePic %>"><img height="30" width="30" src="<%= drivers[agent].profilePic %>"/></a></td>
                                <td><a target="_blank" href="<%= drivers[agent].NationalIDPic %>"><img height="30" width="30" src="<%= drivers[agent].NationalIDPic %>"/></a></td>
                                <td><a target="_blank" href="<%= drivers[agent].DrivingPermitPic %>"><img height="30" width="30" src="<%= drivers[agent].DrivingPermitPic %>"/></a></td>
                                <td><a target="_blank" href="<%= drivers[agent].ThirdPartyPic %>"><img height="30" width="30" src="<%= drivers[agent].ThirdPartyPic %>"/></a></td>
                                 <td><i id=rating></i></td>
                                 <td><button style='margin-top:5px' class="btn btn-primary"onclick="{ approveRest('<%= agent %>') }" id='approveButton'>Approve</button></td>
                                 <td> <button style='margin-top:5px' class="btn btn-primary"onclick="{ deactivateRest('<%= agent %>') }" id='deactivateButton'>Deactivate</button></td>
                                 <td><button style='margin-top:5px' class="btn btn-primary"  onclick="{ rejectRest('<%= agent %>') }" id='rejectButton'>reject</button></td>

                                <td><a href="/viewSingleDriverTrips/<%= agent %>/"><button class="btn btn-primary"  id='singleTripsButton'>Trips</button>  </a></td>
                                <td ><button  onclick="{showPayoutOptions()}" class="btn btn-success">Pay</button>
                                <div style="display:none" id='payoutMethod' class="form-group">
                                <input style='margin-top:5px' class="form-control"  id='payoutamount' name="pay_amount" >
                                <button  style='margin-top:5px' class="btn btn-primary" onclick="{ payDriver('<%= agent %>') }" >Pay</button>
                                </div>
                                </td>

                              </tr>
                             <% })%>
                            </tbody>
                          </table>
                         </div>
            </div>
        </div>
