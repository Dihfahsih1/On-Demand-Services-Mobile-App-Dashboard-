<% include menu.html %>
    <div style="overflow-y:-moz-scrollbars-vertical;margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
        <h3 class="text-center">App Clients' Wallet Top ups</h3>
        <% var keys=Object.keys(customerTransactions) %>
        <table class="table table-hover" border="2">
                <thead class="thead-dark">
                  <tr>
                    <th >Total Transactions: <%= size %></th> 
                  </tr>
                  <tr>
                    <th>Date</th>
                    <th>customerID</th>
                    <th>TransactionID</th>
                    <th>TransactionStatus</th>
                    <th>Amount</th>
                    <th>Phone</th>
                    <th>Reflection Status</th>
                    <th>Reflect to Wallet</th>
                  </tr>
                </thead>
                <tbody>
              <% keys.forEach(function(key){ %>
                  <tr>
                    <td><%= customerTransactions[key].date %></td>
                    <td><%= customerTransactions[key].customer_id %></td>
                    <td><%= customerTransactions[key].transaction_id %></td>
                    <td><%= customerTransactions[key].transaction_status %></td>
                    <td><%= customerTransactions[key].amount %> UGX</td>
                    <td><%= customerTransactions[key].phone %></td>
                    <td><%= customerTransactions[key].reflected_status %></td>
                    <td><button class="btn btn-primary"  id='reflectWallet'>Reflect</button>
                    </td>
                  </tr>
              <% })%> 
                </tbody>
              </table>
     </div>
</div>
